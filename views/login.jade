extends layout
block css
	link(rel='stylesheet', href='/bootstrap-social/bootstrap-social.css')
	link(rel='stylesheet', href='/stylesheets/auth.css')
block js
	script(src='/tweenlite/TweenLite.min.js')
	script(src='/javascripts/auth.js')
block content
	div.container
		div.row.vertical-offset-100
			div.col-md-6.col-md-offset-3
				div.panel.panel-default
					div.panel-heading
						h1.panel-title Sign in to our Passport app
					div.panel-body
							form(class='form-signin', action='/auth/login', method='POST', role='form')
								fieldset
									div.form-group
										input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
									div.form-group
										input(type='password', name='password' class='form-control', placeholder='Password', required)
									button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
									span.clearfix
							a(href='/auth/signup', class='text-center new-account') Create an account
							hr
							div.form-group.text-center
								a.btn.btn-lg.btn-facebook(href='/auth/facebook')
									i.fa.fa-facebook
									span &nbsp;Sign in
								&nbsp; or &nbsp;
								a.btn.btn-lg.btn-twitter(href='/auth/twitter')
									i.fa.fa-twitter
										span &nbsp;Sign in
							if message
								div.alert.alert-warning.text-center(role='alert') #{message}